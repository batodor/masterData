<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog title="{i18n>salesRegion}" class="sapUiContentPadding" id="salesRegionDialog" stretch="{device>/system/phone}" >
		<content>
			<Label required="true" text="{i18n>salesRegionCode}"/>
			<Input custom:key="salesRegion" id="salesRegionInputCode" maxLength="4" value="{Code}" />
			<ToolbarSpacer/>
			<Label class="marginTop" text="{i18n>name}"/>
			<TextArea value="{Name}" maxLength="40" rows="5" width="100%" />
		</content>
		<buttons>
			<Button text="{i18n>cancel}" custom:id="salesRegion" type="Back" press="dialogCancel"/>
			<Button text="{i18n>add}" custom:id="salesRegion" visible="false" type="Accept" press="dialogAdd"/>
			<Button text="{i18n>edit}" custom:id="salesRegion" visible="false" type="Default" press="dialogEdit"/>
			<Button text="{i18n>save}" custom:id="salesRegion" visible="false" type="Accept" press="dialogSave"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>