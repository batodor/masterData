<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Table mode="SingleSelectLeft" id="port" visible="false" custom:id="port" items="{}" select="onTableSelect" width="auto" updateFinished="onListUpdateFinished"
		noDataText="{i18n>detailLineItemTableNoDataText}" growing="true" growingScrollToLoad="true" busyIndicatorDelay="{detailView>/lineItemTableDelay}" class="sapUiResponsiveMargin">
		<headerToolbar>
			<Toolbar class="white">
				<Label id="portCount" text="Items"/>
				<ToolbarSpacer/>
				<SearchField placeholder="{i18n>search}" showSearchButton="true" search="triggerSearch" width="auto"/>
				<Button text="{i18n>add}" custom:id="port" press="tableAdd" type="Accept"/>
				<Button id="portEdit" custom:id="port" text="{i18n>edit}" press="tableEdit" enabled="false" type="Emphasized"/>
				<Button id="portDelete" custom:id="port" text="{i18n>delete}" press="tableDelete" type="Reject" enabled="false"/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column><Text class="black" text="{i18n>countryName}"/></Column>
			<Column><Text class="black" text="{i18n>portCode}"/></Column>
			<Column><Text class="black" text="{i18n>portName}"/></Column>
			<Column><Text class="black" text="{i18n>stationName}"/></Column>
			<Column><Text class="black" text="{i18n>active}"/></Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{CountryName}"/>
					<Text text="{PortCode}"/>
					<Text text="{PortName}"/>
					<Text text="{StationName}"/>
					<CheckBox selected="{Active}" enabled="false"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>