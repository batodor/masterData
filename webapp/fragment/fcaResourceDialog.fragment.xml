<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core"	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog title="{i18n>fcaResource}" class="sapUiContentPadding" id="fcaResourceDialog">
		<content>
			<Label required="true" text="{i18n>salesProgram}" width="200px"/>
			<Select selectedKey="{SalesProgram}" custom:key="salesProgram" forceSelection="false" 
				items="{ path: '/salesProgramSet', sorter: { path: 'SalesProgram' } }" width="200px">
				<core:Item key="{SalesProgram}" text="{SalesProgram} - {Description}"/>
			</Select>
			<ToolbarSpacer/>
			<Label text="{i18n>productionUnit}" width="200px"/>
			<Select forceSelection="false" selectedKey="{ProductionUnit}" items="{ path: '/productionUnitSet', sorter: { path: 'Code' } }" width="200px">
				<core:Item key="{Code}" text="{Code} - {Name}"/>
			</Select>
			<ToolbarSpacer/>
			<Label text="{i18n>material}" width="200px"/>
			<Input 
				type="Text"
				custom:id="material"
				custom:filters="Code,Division,Name"
				id="materialfcaResourceValueHelp"
				placeholder="{i18n>plsChoose} {i18n>material}"
				showValueHelp="true"
				valueHelpRequest="handleValueHelp"
				value="{Material}" width="200px" />
			<ToolbarSpacer/>
			<Label text="{i18n>dateFrom}" width="200px"/>
			<DatePicker value="{DateFrom}" width="206px"/>
			<ToolbarSpacer/>
			<Label text="{i18n>dateTo}" width="200px"/>
			<DatePicker value="{DateTo}" width="206px"/>
			<ToolbarSpacer/>
			<Label text="{i18n>minFcaPrice}" width="200px"/>
			<Input value="{MinFcaPrice}" width="200px"/>
			<ToolbarSpacer/>
			<Label text="{i18n>currency}" width="200px"/>
			<Input 
				custom:id="currencyPopup"
				custom:set="currency"
				custom:filters="CurrencyCode,CurrencyName"
				id="currencyPopupfcaResourceValueHelp"
				placeholder="{i18n>plsChoose} {i18n>currency}"
				showValueHelp="true"
				valueHelpRequest="handleValueHelp"
				value="{Currency}" width="200px" />
		</content>
		<buttons>
			<Button text="{i18n>cancel}" custom:id="fcaResource" type="Back" press="dialogCancel"/>
			<Button text="{i18n>add}" custom:id="fcaResource" visible="false" type="Accept" press="dialogAdd"/>
			<Button text="{i18n>edit}" custom:id="fcaResource" visible="false" type="Default" press="dialogEdit"/>
			<Button text="{i18n>save}" custom:id="fcaResource" visible="false" type="Accept" press="dialogSave"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>