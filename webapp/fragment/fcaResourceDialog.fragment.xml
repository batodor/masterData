<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core"	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog title="{i18n>fcaResource}" class="sapUiContentPadding" id="fcaResourceDialog" stretch="{device>/system/phone}">
		<content>
			<Label required="true" text="{i18n>salesProgram}" />
			<Select selectedKey="{SalesProgram}" custom:key="salesProgram" forceSelection="false" 
				items="{ path: '/dictionarySalesProgramSet', sorter: { path: 'Code' } }" width="100%">
				<core:Item key="{Code}" text="{Code} - {Name}"/>
			</Select>
			<ToolbarSpacer/>
			<Label class="marginTop" required="true" text="{i18n>productionUnit}" />
			<Input 
				custom:id="productionUnitPopup"
				custom:key="productionUnit"
				custom:set="dictionaryProductRecipe" 
				custom:filters="Code,Name"
				custom:keyValue="{ProductionUnit}"
				id="productionUnitPopupfcaResourceValueHelp"
				showValueHelp="true"
				valueHelpRequest="handleValueHelp"
				value="{ProductionUnit} - {ProductionUnitText}" />
			<ToolbarSpacer/>
			<Label class="marginTop" required="true" text="{i18n>material}" />
			<Input 
				custom:id="material"
				custom:key="material"
				custom:set="material"
				custom:filters="Code,Division,Name"
				custom:keyValue="{Material}"
				id="materialfcaResourceValueHelp"
				showValueHelp="true"
				valueHelpRequest="handleValueHelp"
				value="{Material} - {MaterialText}" />
			<ToolbarSpacer/>
			<Label class="marginTop" required="true" text="{i18n>dateFrom}" />
			<DatePicker custom:key="dateFrom" dateValue="{FromDate}" />
			<ToolbarSpacer/>
			<Label class="marginTop" required="false" text="{i18n>dateTo}" />
			<DatePicker dateValue="{ToDate}" custom:editable="true" />
			<ToolbarSpacer/>
			<Label class="marginTop" text="{i18n>minFcaPrice}" />
			<Input value="{MinFCAPrice}" type="Number" custom:type="Number" maxLength="18" placeholder="0"/>
			<ToolbarSpacer/>
			<Label class="marginTop" text="{i18n>currency}" />
			<Input 
				custom:id="currencyPopup"
				custom:set="currency"
				custom:filters="CurrencyCode,CurrencyName"
				id="currencyPopupfcaResourceValueHelp"
				showValueHelp="true"
				valueHelpRequest="handleValueHelp"
				value="{Currency}" />
		</content>
		<buttons>
			<Button text="{i18n>cancel}" custom:id="fcaResource" type="Back" press="dialogCancel"/>
			<Button text="{i18n>add}" custom:id="fcaResource" visible="false" type="Accept" press="dialogAdd"/>
			<Button text="{i18n>edit}" custom:id="fcaResource" visible="false" type="Default" press="dialogEdit"/>
			<Button text="{i18n>save}" custom:id="fcaResource" visible="false" type="Accept" press="dialogSave"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>