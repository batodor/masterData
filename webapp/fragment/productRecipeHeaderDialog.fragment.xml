<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog title="{i18n>productRecipeHeader}" stretch="{device>/system/phone}" class="sapUiContentPadding" id="productRecipeHeaderDialog">
		<content>
			<Label required="true" text="{i18n>salesProgram}"/>
			<Select selectedKey="{Code}" custom:key="salesProgram" forceSelection="false" width="100%" 
				items="{ path: '/dictionarySalesProgramSet', sorter: { path: 'Code' } }">
				<core:Item key="{Code}" text="{Code} - {Name}"/>
			</Select>
			<ToolbarSpacer/>
			<Label class="marginTop" required="true" text="{i18n>dateFrom}"/>
			<DatePicker dateValue="{DateFrom}" custom:key="dateFrom" />
			<ToolbarSpacer/>
			<Label class="marginTop" required="true" text="{i18n>dateTo}"/>
			<DatePicker dateValue="{DateTo}" custom:key="dateTo" custom:editable="true"/>
			
			<Input value="{Name}" visible="false"/>
			<Input value="{RecipeNumber}" visible="false"/>
		</content>
		<buttons>
			<Button text="{i18n>cancel}" custom:id="productRecipeHeader" type="Back" press="dialogCancel"/>
			<Button text="{i18n>add}" custom:id="productRecipeHeader" visible="false" type="Accept" press="dialogAdd"/>
			<Button text="{i18n>edit}" custom:id="productRecipeHeader" visible="false" type="Default" press="dialogEdit"/>
			<Button text="{i18n>save}" custom:id="productRecipeHeader" visible="false" type="Accept" press="dialogSave"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>