<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog title="{i18n>salesDirection}" class="sapUiContentPadding" id="salesDirectionDialog">
		<content>
			<Text text="{i18n>salesDirection}" width="150px"/>
			<Input custom:key="salesDirection" value="{SalesDirection}" width="250px"/>
			<ToolbarSpacer/>
			<Text text="{i18n>description}" width="150px"/>
			<TextArea value="{Description}" width="250px" />
		</content>
		<buttons>
			<Button text="{i18n>cancel}" custom:id="salesDirection" type="Back" press="dialogCancel"/>
			<Button text="{i18n>add}" custom:id="salesDirection" visible="false" type="Accept" press="dialogAdd"/>
			<Button text="{i18n>edit}" custom:id="salesDirection" visible="false" type="Accept" press="dialogEdit"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>