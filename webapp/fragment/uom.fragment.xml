<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Table mode="SingleSelectLeft" includeItemInSelection="true" id="uom" visible="false" custom:id="uom" items="{}" select="onTableSelect" width="auto" updateFinished="onListUpdateFinished"
		noDataText="{i18n>detailLineItemTableNoDataText}" growing="true" growingScrollToLoad="true" busyIndicatorDelay="{detailView>/lineItemTableDelay}" class="sapUiResponsiveMargin">
		<headerToolbar>
			<Toolbar class="white">
				<SearchField placeholder="{i18n>uomName}" custom:id="uom" custom:key="UOMName" showSearchButton="true" search="triggerSearch" width="auto"/>
				<ToolbarSpacer/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column><Text class="black" text="{i18n>uomCode}"/></Column>
			<Column><Text class="black" text="{i18n>uomName}"/></Column>
			<Column><Text class="black" text="{i18n>uomQP}"/></Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{UOMCode}"/>
					<Text text="{UOMName}"/>
					<Text text="{UOMQP}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>