<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog title="{i18n>qualityParameters}" class="sapUiContentPadding" id="qualityParametersDialog" stretch="{device>/system/phone}">
		<content>
			<Label required="true" text="{i18n>qpKey}"/>
			<Input 
				custom:id="qualityParametersPopup"
				custom:key="qpKey"
				custom:filters="QPCode,QPName"
				custom:set="qualityParameters"
				custom:customId="qualityParametersInputCode"
				id="qualityParametersInputCode"
				showValueHelp="false"
				valueHelpRequest="handleValueHelp"
				value="{QPKey}" />
            <ToolbarSpacer/>
			<Label class="marginTop" text="{i18n>qpCode}"/>
			<Input value="{QPCode}" maxLength="20" />
			<ToolbarSpacer/>
			<Label class="marginTop" text="{i18n>qpName}"/>
			<Input value="{QPName}" maxLength="40"/>
			<ToolbarSpacer/>
			<Label class="marginTop" text="{i18n>setOfBasesQP}"/>
			<Select forceSelection="false" selectedKey="{SetBasesQP}" items="{ path: '/sbmqcSet', sorter: { path: 'Code' } }" width="100%">
				<core:Item key="{Code}" text="{Code} - {Name}"/>
			</Select>
			<ToolbarSpacer/>
			<Label class="marginTop" text="{i18n>finenessQP}"/>
			<Input 
				custom:id="qualityParametersPopup"
				custom:filters="QPCode,QPName"
				custom:set="qualityParameters"
				id="qualityParametersPopupqualityParametersValueHelp"
				showValueHelp="true"
				valueHelpRequest="handleValueHelp"
				value="{FinenessQP}" />
			<ToolbarSpacer/>
		</content>
		<buttons>
			<Button text="{i18n>cancel}" custom:id="qualityParameters" type="Back" press="dialogCancel"/>
			<Button text="{i18n>add}" custom:id="qualityParameters" visible="false" type="Accept" press="dialogAdd"/>
			<Button text="{i18n>edit}" custom:id="qualityParameters" visible="false" type="Default" press="dialogEdit"/>
			<Button text="{i18n>save}" custom:id="qualityParameters" visible="false" type="Accept" press="dialogSave"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>