<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog title="{i18n>limitsStandartRating}" class="sapUiContentPadding" id="limitsStandartPopupDialog">
		<content>
			<Label text="{i18n>tonnageSign}" width="200px"/>
			<ComboBox selectedKey="{TonnageSign}" forceSelection="false"  width="150px">
				<core:Item key="&#60;" text="&#60;"/>
				<core:Item key="&#62;" text="&#62;"/>
				<core:Item key="=" text="="/>
			</ComboBox>
			<ToolbarSpacer/>
			<Label text="{i18n>tonnage}" width="200px"/>
			<Input value="{Tonnage}" width="150px" />
			<ToolbarSpacer/>
			<Label text="{i18n>tonnageUom}" width="200px"/>
			<ComboBox selectedKey="{TonnageUOM}" forceSelection="false"  width="150px">
				<core:Item key="" text=""/>
				<core:Item key="TO" text="TO"/>
			</ComboBox>
			<ToolbarSpacer/>
			<Label text="{i18n>periodSign}" width="200px"/>
			<ComboBox selectedKey="{PeriodSign}" forceSelection="false"  width="150px">
				<core:Item key="" text=""/>
				<core:Item key="&#60;" text="&#60;"/>
				<core:Item key="&#62;" text="&#62;"/>
				<core:Item key="=" text="="/>
			</ComboBox>
			<ToolbarSpacer/>
			<Label text="{i18n>period}" width="200px"/>
			<Input value="{Period}" width="150px" />
			<ToolbarSpacer/>
			<Label text="{i18n>periodUom}" width="200px"/>
			<ComboBox selectedKey="{TonnageUOM}" forceSelection="false"  width="150px">
				<core:Item key="" text=""/>
				<core:Item key="DAY" text="DAY"/>
			</ComboBox>
			<ToolbarSpacer/>
			<Label text="{i18n>paymentMethod}" width="200px"/>
			<Select selectedKey="{PaymentMethod}" forceSelection="false" 
				items="{ path: '/dictionaryPaymentMethodsSet', sorter: { path: 'Name' } }" width="150px">
				<core:Item key="{Code}" text="{Code} - {Name}"/>
			</Select>
			<ToolbarSpacer/>
			<Label text="{i18n>paymentTerms}" width="200px"/>
			<Select selectedKey="{PaymentTerms}" forceSelection="false" 
				items="{ path: '/dictionaryPaymentTermsSet', sorter: { path: 'Name' } }" width="150px">
				<core:Item key="{Code}" text="{Code} - {Name}"/>
			</Select>
			
			<Label text="{SubItem}" visible="false" />
			<Label text="{LegalEntity}" visible="false" />
			<Label text="{Rating}" visible="false" />
			<Label text="{BusinessPartnerRole}" visible="false" />
			<Label text="{DateFrom}" visible="false" />
			<Label text="{DateTo}" visible="false" />
		</content>
		<buttons>
			<Button text="{i18n>cancel}" custom:id="limitsStandartPopup" type="Back" press="dialogCancel"/>
			<Button text="{i18n>add}" custom:id="limitsStandartPopup" visible="false" type="Accept" press="dialogAdd"/>
			<Button text="{i18n>edit}" custom:id="limitsStandartPopup" visible="false" type="Default" press="dialogEdit"/>
			<Button text="{i18n>save}" custom:id="limitsStandartPopup" visible="false" type="Accept" press="dialogSave"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>