<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Table mode="SingleSelectLeft" includeItemInSelection="true" id="limitsExpress" visible="false" custom:id="limitsExpress" items="{}" select="onTableSelect" width="auto" updateFinished="onListUpdateFinished"
		noDataText="{i18n>detailLineItemTableNoDataText}" growing="true" growingScrollToLoad="true" busyIndicatorDelay="{detailView>/lineItemTableDelay}" class="sapUiResponsiveMargin">
		<headerToolbar>
			<Toolbar class="white">
				<ToolbarSpacer/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column><Text class="black" text="{i18n>legalEntity}"/></Column>
			<Column><Text class="black" text="{i18n>countryRating}"/></Column>
			<Column><Text class="black" text="{i18n>financeCommercialRating}"/></Column>
			<Column><Text class="black" text="{i18n>bpRole}"/></Column>
			<!--<Column><Text class="black" text="{i18n>subitem}"/></Column>-->
			<Column><Text class="black" text="{i18n>dateFrom}"/></Column>
			<Column><Text class="black" text="{i18n>dateTo}"/></Column>
			<Column><Text class="black" text="{i18n>paymentMethod}"/></Column>
			<Column><Text class="black" text="{i18n>paymentTerm}"/></Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{CompanyCodeText}"/>
					<Text text="{CountryRating}"/>
					<Text text="{FinanceCommercialRating}"/>
					<Text text="{PartnersRoleText}"/>
					<!--<Text text="{Subitem}"/>-->
					<Text text="{ path: 'DateFrom', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd/MM/yyyy' } }"/>
					<Text text="{ path: 'DateTo', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd/MM/yyyy' } }"/>
					<Text text="{PaymentMethodText}"/>
					<Text text="{PaymentTermText}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>