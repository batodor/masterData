<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog title="{i18n>sbmqc}" class="sapUiContentPadding" id="sbmqcDialog" stretch="{device>/system/phone}">
		<content>
			<Label required="true" text="{i18n>sbmqcCode}"/>
			<Input value="{Code}" maxLength="12" custom:key="sbmqcCode"/>
			<ToolbarSpacer/>
			<Label class="marginTop" text="{i18n>sbmqcName}"/>
			<TextArea value="{Name}" maxLength="100" rows="5" width="100%"/>
			<ToolbarSpacer/>
			<Label class="marginTop" required="true" text="{i18n>bmqcName}"/>
			<Select forceSelection="false" selectedKey="{CodeBase}" custom:key="bmqcName" items="{ path: '/bmqcSet', sorter: { path: 'Name' } }" width="100%">
				<core:Item key="{Code}" text="{Name}"/>
			</Select>
			<Input value="{NameBase}" visible="false" custom:key="" />
		</content>
		<buttons>
			<Button text="{i18n>cancel}" custom:id="sbmqc" type="Back" press="dialogCancel"/>
			<Button text="{i18n>add}" custom:id="sbmqc" visible="false" type="Accept" press="dialogAdd"/>
			<Button text="{i18n>edit}" custom:id="sbmqc" visible="false" type="Default" press="dialogEdit"/>
			<Button text="{i18n>save}" custom:id="sbmqc" visible="false" type="Accept" press="dialogSave"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>