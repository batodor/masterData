<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Table mode="SingleSelectLeft" id="fcaDomestic" visible="false" items="{ path: '/FCADomesticSet' }" select="onTableSelect" width="auto" updateFinished="onListUpdateFinished"
		noDataText="{i18n>detailLineItemTableNoDataText}" busyIndicatorDelay="{detailView>/lineItemTableDelay}" class="sapUiResponsiveMargin">
		<headerToolbar>
			<Toolbar class="white">
				<Label id="fcaDomesticCount" text="Items"/>
				<ToolbarSpacer/>
				<SearchField placeholder="{i18n>search}" showSearchButton="true" search="triggerSearch" width="auto"/>
				<Button text="{i18n>add}" press="tableAdd" type="Accept"/>
				<Button id="fcaDomesticEdit" text="{i18n>edit}" press="tableEdit" enabled="false" type="Emphasized"/>
				<Button id="fcaDomesticDelete" text="{i18n>delete}" press="tableDelete" type="Reject" enabled="false"/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column>
				<Label class="black" text="{i18n>salesRegion}"/>
			</Column>
			<Column>
				<Label class="black" text="{i18n>productionUnit}"/>
			</Column>
			<Column>
				<Label class="black" text="{i18n>material}"/>
			</Column>
			<Column>
				<Label class="black" text="{i18n>distributionInBulk}"/>
			</Column>
			<Column>
				<Label class="black" text="{i18n>dateFrom}"/>
			</Column>
			<Column>
				<Label class="black" text="{i18n>dateTo}"/>
			</Column>
			<Column>
				<Label class="black" text="{i18n>fcaPriceRub}"/>
			</Column>
			<Column>
				<Label class="black" text="{i18n>fcaPriceUsd}"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{SalesRegion}"/>
					<Text text="{ProductionUnit}"/>
					<Text text="{Material}"/>
					<Text text="{DistributionInBulk}"/>
					<Text text="{DateFrom}"/>
					<Text text="{DateTo}"/>
					<Text text="{FcaPriceRub}"/>
					<Text text="{FcaPriceUsd}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>