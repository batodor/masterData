<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Table mode="SingleSelectLeft" id="productionUnit" visible="false" custom:id="productionUnit" items="{}" select="onTableSelect" width="auto" updateFinished="onListUpdateFinished"
		noDataText="{i18n>detailLineItemTableNoDataText}" growing="true" growingScrollToLoad="true" busyIndicatorDelay="{detailView>/lineItemTableDelay}" class="sapUiResponsiveMargin">
		<headerToolbar>
			<Toolbar class="white">
				<Label id="productionUnitCount" text="Items"/>
				<ToolbarSpacer/>
				<SearchField placeholder="{i18n>search}" showSearchButton="true" search="triggerSearch" width="auto"/>
				<Button text="{i18n>add}" custom:id="productionUnit" press="tableAdd" type="Accept"/>
				<Button id="productionUnitEdit" custom:id="productionUnit" text="{i18n>edit}" press="tableEdit" enabled="false" type="Emphasized"/>
				<Button id="productionUnitDelete" custom:id="productionUnit" text="{i18n>delete}" press="tableDelete" type="Reject" enabled="false"/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column><Text class="black" text="{i18n>productionUnitCode}"/></Column>
			<Column><Text class="black" text="{i18n>productionUnitName}"/></Column>
			<Column><Text class="black" text="{i18n>internalExternal}"/></Column>
			<Column><Text class="black" text="{i18n>partner}"/></Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{Code}"/>
					<Text text="{Name}"/>
					<Text text="{Type}"/>
					<Text text="{Partner}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>