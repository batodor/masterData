<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog title="{i18n>limitsStandartRating}" class="sapUiContentPadding" id="limitsStandartDialog">
		<content>
			<Label required="true" text="{i18n>legalEntity}" width="250px"/>
			<Input custom:key="legalEntity" value="{LegalEntity}" width="150px"/>
			<ToolbarSpacer/>
			<Label text="{i18n>rating}" width="250px"/>
			<Select selected="{Rating}" width="150px"></Select>
			<ToolbarSpacer/>
			<Label text="{i18n>businessPartnersRole}" width="250px"/>
			<Select selected="{BusinessPartnersRole}" width="150px"/>
			<ToolbarSpacer/>
			<Label text="{i18n>tonnage}" width="250px"/>
			<Input value="{Tonnage}" width="150px"/>
			<ToolbarSpacer/>
			<Label text="{i18n>uom}" width="250px"/>
			<Select selected="{Uom}" width="150px"/>
			<ToolbarSpacer/>
			<Label text="{i18n>paymentTerms}" width="250px"/>
			<Select selectedKey="{PaymentTerms}" forceSelection="false" 
				items="{ path: '/dictionaryPaymentTermsSet', sorter: { path: 'Name' } }" width="150px">
				<core:Item key="{Code}" text="{Code} - {Name}"/>
			</Select>
		</content>
		<buttons>
			<Button text="{i18n>cancel}" custom:id="limitsStandart" type="Back" press="dialogCancel"/>
			<Button text="{i18n>add}" custom:id="limitsStandart" visible="false" type="Accept" press="dialogAdd"/>
			<Button text="{i18n>edit}" custom:id="limitsStandart" visible="false" type="Default" press="dialogEdit"/>
			<Button text="{i18n>save}" custom:id="limitsStandart" visible="false" type="Accept" press="dialogSave"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>