<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog title="{i18n>limitsStandartRating}" stretch="{device>/system/phone}" class="sapUiContentPadding" id="limitsStandartDialog">
		<content>
			<Label required="true" text="{i18n>legalEntity}"/>
			<Select selectedKey="{LegalEntity}" width="100%" custom:key="legalEntity" forceSelection="false" items="{ path: '/dictionaryCompanyCodesSet', sorter: { path: 'Name' } }">
				<core:Item key="{Code}" text="{Code} - {Name}"/>
			</Select>
			<ToolbarSpacer/>
			<Label class="marginTop" required="true" text="{i18n>rating}"/>
			<Select selectedKey="{Rating}" width="100%" custom:key="rating" forceSelection="false" items="{ path: '/dictionaryRatingSet', sorter: { path: 'Rating' } }">
				<core:Item key="{Rating}" text="{Rating}"/>
			</Select>
			<ToolbarSpacer/>
			<Label class="marginTop" required="true" text="{i18n>businessPartnersRole}"/>
			<Select selectedKey="{BusinessPartnerRole}" width="100%" custom:key="businessPartnersRole" forceSelection="false" 
				items="{ path: '/dictionaryBusinessPartnerFunctionsSet', sorter: { path: 'Name' } }">
				<core:Item key="{Code}" text="{Code} - {Name}"/>
			</Select>
			<l:BlockLayout>
				<l:BlockLayoutRow>
					<l:BlockLayoutCell class="sapUiNoMargin" id="LimitsForStandardRating_MasterDetailNBlock">
						<Label class="marginTop" text="{i18n>tonnage}"/>
						<Input custom:name="Tonnage" maxLength="13" placeholder="0" value="{Tonnage}" />
						<ToolbarSpacer/>
						<Label class="marginTop" text="{i18n>tonnagePaymentCond}"/>
						<Input maxLength="13" placeholder="0" value="{TonnagePaymentCond}" />
						<ToolbarSpacer/>
						<Label class="marginTop" text="{i18n>tonnageSign}"/>
						<Select selectedKey="{TonnageSign}" forceSelection="false" width="100%" >
							<core:Item key="" text=""/>
							<core:Item key="&#60;" text="&#60;"/>
							<core:Item key="&#60;=" text="&#60;="/>
							<core:Item key="&#62;" text="&#62;"/>
							<core:Item key="&#62;=" text="&#62;="/>
							<core:Item key="=" text="="/>
						</Select>
						<ToolbarSpacer/>
						<Label class="marginTop" text="{i18n>tonnageUom}"/>
						<Select selectedKey="{TonnageUOM}" forceSelection="false" width="100%" >
							<core:Item key="" text=""/>
							<core:Item key="TO" text="TO"/>
						</Select>
						<ToolbarSpacer/>
						<Label class="marginTop" text="{i18n>period}"/>
						<Input maxLength="4" placeholder="0" value="{Period}" />
						<ToolbarSpacer/>
						<Label class="marginTop" text="{i18n>periodPaymentCond}"/>
						<Input maxLength="3" placeholder="0" value="{PeriodPaymentCond}" />
						<ToolbarSpacer/>
						<Label class="marginTop" text="{i18n>periodSign}"/>
						<Select selectedKey="{PeriodSign}" forceSelection="false" width="100%" >
							<core:Item key="" text=""/>
							<core:Item key="&#60;" text="&#60;"/>
							<core:Item key="&#60;=" text="&#60;="/>
							<core:Item key="&#62;" text="&#62;"/>
							<core:Item key="&#62;=" text="&#62;="/>
							<core:Item key="=" text="="/>
						</Select>
						<ToolbarSpacer/>
						<Label class="marginTop" text="{i18n>periodUom}"/>
						<Select selectedKey="{PeriodUOM}" forceSelection="false" >
							<core:Item key="" text=""/>
							<core:Item key="DAY" text="DAY"/>
						</Select>
						<ToolbarSpacer/>
						<Label class="marginTop" text="{i18n>paymentMethod}"/>
						<Select selectedKey="{PaymentMethod}" forceSelection="false" width="100%" 
							items="{ path: '/dictionaryPaymentMethodsSet', sorter: { path: 'Name' } }">
							<core:Item key="{Code}" text="{Code} - {Name}"/>
						</Select>
						<ToolbarSpacer/>
						<Label class="marginTop" text="{i18n>paymentTerms}"/>
						<Select selectedKey="{PaymentTerms}" forceSelection="false" width="100%" 
							items="{ path: '/dictionaryPaymentTermsSet', sorter: { path: 'Name' } }">
							<core:Item key="{Code}" text="{Code} - {Name}"/>
						</Select>
						<ToolbarSpacer/>
						<Input value="{Subitem}" placeholder="0" type="Number" visible="false" />
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
			</l:BlockLayout>
			<Table mode="SingleSelectLeft" popinLayout="GridLarge" includeItemInSelection="true" id="LimitsForStandardRating_MasterDetailN" 
				custom:table="LimitsForStandardRating_MasterDetailN" 
				custom:dialog="limitsStandart" custom:crud="limitsStandart" items="{}" select="onTableSelect" width="100%" updateFinished="onListUpdateFinished" 
				noDataText="{i18n>detailLineItemTableNoDataText}" growing="true" growingScrollToLoad="true" busyIndicatorDelay="{detailView>/lineItemTableDelay}">
				<headerToolbar>
					<Toolbar class="white">
						<ToolbarSpacer/>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column hALign="Center"><Text class="black" text="{i18n>tonnage}"/></Column>
					<Column hALign="Center"><Text class="black" text="{i18n>tonnagePaymentCond}"/></Column>
					<Column minScreenWidth="Tablet" demandPopin="true" hALign="Center" width="60px"><Text class="black" text="{i18n>tonnageSign}"/></Column>
					<Column minScreenWidth="Tablet" demandPopin="true" hALign="Center"><Text class="black" text="{i18n>tonnageUom}"/></Column>
					<Column minScreenWidth="Tablet" demandPopin="true" hALign="Center"><Text class="black" text="{i18n>period}"/></Column>
					<Column minScreenWidth="Tablet" demandPopin="true" hALign="Center" width="120px"><Text class="black" text="{i18n>periodPaymentCond}"/></Column>
					<Column minScreenWidth="Tablet" demandPopin="true" hALign="Center" width="60px"><Text class="black" text="{i18n>periodSign}"/></Column>
					<Column minScreenWidth="Desktop" demandPopin="true" hALign="Center" width="60px"><Text class="black" text="{i18n>periodUom}"/></Column>
					<Column minScreenWidth="Desktop" demandPopin="true" hALign="Center" width="60px"><Text class="black" text="{i18n>paymentMethod}"/></Column>
					<Column minScreenWidth="Desktop" demandPopin="true" hALign="Center" width="60px"><Text class="black" text="{i18n>paymentTerms}"/></Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{Tonnage}"/>
							<Text text="{TonnagePaymentCond}"/>
							<Text text="{TonnageSign}"/>
							<Text text="{TonnageUOM}"/>
							<Text text="{Period}"/>
							<Text text="{PeriodPaymentCond}"/>
							<Text text="{PeriodSign}"/>
							<Text text="{PeriodUOM}"/>
							<Text text="{PaymentMethod}"/>
							<Text text="{PaymentTerms}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
		<buttons>
			<Button text="{i18n>cancel}"
		         id="limitsStandartCancel"
				    custom:id="limitsStandart"
			        custom:block="LimitsForStandardRating_MasterDetailNBlock"
			        type="Back"
			        press="dialogCancel"/>
			<Button text="{i18n>add}"
			     id="limitsStandartAdd"
			        custom:id="LimitsForStandardRating_MasterDetailN"
			        type="Emphasized"
			        custom:add="true"
			        visible="false"
			        press="tableAdd"/>
			<Button text="{i18n>add}"
			     id="limitsStandartBlockAdd"
			        custom:id="limitsStandart"
			        custom:block="LimitsForStandardRating_MasterDetailNBlock"
			        type="Emphasized"
			        visible="false"
			        press="dialogAdd"/>
			<Button text="{i18n>edit}"
			     id="limitsStandartEdit"
			        custom:id="LimitsForStandardRating_MasterDetailN"
			        enabled="false"
			        type="Default"
			        press="tableEdit"/>
			<Button text="{i18n>edit}"
			     id="limitsStandartBlockEdit"
			        custom:id="limitsStandart" 
			        custom:block="LimitsForStandardRating_MasterDetailNBlock"
			        type="Default"
			        press="dialogEdit"/>
			<Button text="{i18n>delete}"
			     id="limitsStandartDelete"
			        custom:id="LimitsForStandardRating_MasterDetailN" 
			        enabled="false"
			        type="Reject"
			        press="tableDelete"/>
			<Button text="{i18n>save}"
			     id="limitsStandartSave"
			        custom:id="limitsStandart" 
			        custom:block="LimitsForStandardRating_MasterDetailNBlock"
			        visible="false"
			        type="Accept"
			        press="dialogSave"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>