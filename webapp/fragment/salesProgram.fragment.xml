<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Table mode="SingleSelectLeft" id="salesProgram" visible="false" items="{}" select="onTableSelect" width="auto" updateFinished="onListUpdateFinished"
		noDataText="{i18n>detailLineItemTableNoDataText}" growing="true" growingScrollToLoad="true" busyIndicatorDelay="{detailView>/lineItemTableDelay}" class="sapUiResponsiveMargin">
		<headerToolbar>
			<Toolbar class="white">
				<Label id="salesProgramCount" text="Items"/>
				<ToolbarSpacer/>
				<SearchField placeholder="{i18n>search}" showSearchButton="true" search="triggerSearch" width="auto"/>
				<Button text="{i18n>add}" press="tableAdd" type="Accept"/>
				<Button id="salesProgramEdit" text="{i18n>edit}" press="tableEdit" enabled="false" type="Emphasized"/>
				<Button id="salesProgramDelete" text="{i18n>delete}" press="tableDelete" type="Reject" enabled="false"/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column><Text class="black" text="{i18n>salesProgram}"/></Column>
			<Column><Text class="black" text="{i18n>description}"/></Column>
			<Column><Text class="black" text="{i18n>materialGroup}"/></Column>
			<Column><Text class="black" text="{i18n>incoterms}"/></Column>
			<Column><Text class="black" text="{i18n>cvNar}"/></Column>
			<Column><Text class="black" text="{i18n>uom}"/></Column>
			<Column><Text class="black" text="{i18n>narGarGad}"/></Column>
			<Column width="40px"><Text class="black" text="{i18n>actual}"/></Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{SalesProgram}"/>
					<Text text="{Description}"/>
					<Text text="{MaterialGroup}"/>
					<Text text="{Incoterms}"/>
					<Text text="{CVNAR}"/>
					<Text text="{Uom}"/>
					<Text text="{NarGarGad}"/>
					<CheckBox selected="{Actual}" enabled="false" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>