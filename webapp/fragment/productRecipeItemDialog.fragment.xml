<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog title="{i18n>productRecipeItem}" stretch="{device>/system/phone}" class="sapUiContentPadding" id="productRecipeItemDialog">
		<content>
			<Label required="true" text="{i18n>recipeNumber}"/>
			<Input custom:key="recipeNumber" id="productRecipeItemRecipeNumber" value="{RecipeNumber}"  />
			<ToolbarSpacer/>
			<Label class="marginTop" required="true" text="{i18n>itemNumber}"/>
			<Input custom:key="itemNumber" value="{ItemNumber}" />
			<ToolbarSpacer/>
			<Label class="marginTop" text="{i18n>material}"/>
			<Input 
				type="Text"
				custom:id="material"
				custom:filters="Code,Division,Name"
				custom:value="{Material}"
				custom:name="Material"
				id="materialproductRecipeItemValueHelp"
				showValueHelp="true"
				valueHelpRequest="handleValueHelp"
				value="{Material} - {MaterialText}"  />
			<ToolbarSpacer/>
			<Label class="marginTop" text="{i18n>productionUnit}"/>
			<Select forceSelection="false" selectedKey="{ProductionUnit}" items="{ path: '/dictionaryProductRecipeSet', sorter: { path: 'Name' } }"  width="100%">
				<core:Item key="{Code}" text="{Code} - {Name}"/>
			</Select>
			<ToolbarSpacer/>
			<Label class="marginTop" text="{i18n>content}"/>
			<Input value="{Content}" type="Number" custom:type="Number" placeholder="0"  />
			<ToolbarSpacer/>
			<Label class="marginTop" text="{i18n>uom}"/>
			<Select forceSelection="false" custom:name="UOM" selectedKey="{= ${UOM} === '%' ? '%' : '%' }" width="100%">
				<core:Item key="" text=""/>
				<core:Item key="%" text="%"/>
			</Select>
		</content>
		<buttons>
			<Button text="{i18n>cancel}" custom:id="productRecipeItem" type="Back" press="dialogCancel"/>
			<Button text="{i18n>add}" custom:id="productRecipeItem" visible="false" type="Accept" press="dialogAdd"/>
			<Button text="{i18n>edit}" custom:id="productRecipeItem" visible="false" type="Default" press="dialogEdit"/>
			<Button text="{i18n>save}" custom:id="productRecipeItem" visible="false" type="Accept" press="dialogSave"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>