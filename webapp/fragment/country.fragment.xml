<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Table mode="SingleSelectLeft" id="country" visible="false" items="{}" select="onTableSelect" width="auto" updateFinished="onListUpdateFinished"
		noDataText="{i18n>detailLineItemTableNoDataText}" growing="true" growingScrollToLoad="true" busyIndicatorDelay="{detailView>/lineItemTableDelay}" class="sapUiResponsiveMargin">
		<headerToolbar>
			<Toolbar class="white">
				<Label id="countryCount" text="Items"/>
				<ToolbarSpacer/>
				<SearchField placeholder="{i18n>search}" showSearchButton="true" search="triggerSearch" width="auto"/>
				<Button text="{i18n>add}" press="tableAdd" type="Accept"/>
				<Button id="countryEdit" text="{i18n>edit}" press="tableEdit" enabled="false" type="Emphasized"/>
				<Button id="countryDelete" text="{i18n>delete}" press="tableDelete" type="Reject" enabled="false"/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column><Text class="black" text="{i18n>countryCode}"/></Column>
			<Column><Text class="black" text="{i18n>countryName}"/></Column>
			<Column><Text class="black" text="{i18n>blacklisted}"/></Column>
			<Column><Text class="black" text="{i18n>countryRating}"/></Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{CountryCode}"/>
					<Text text="{CountryName}"/>
					<CheckBox selected="{Blacklisted}" enabled="false"/>
					<Text text="{CountryRating}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>