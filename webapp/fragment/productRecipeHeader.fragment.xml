<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Table mode="SingleSelectLeft" includeItemInSelection="true" id="productRecipeHeader" visible="false" custom:id="productRecipeHeader" custom:key="Code" custom:details="productRecipeItem" 
		items="{}" select="onTableSelect" width="auto" updateFinished="onListUpdateFinished" noDataText="{i18n>detailLineItemTableNoDataText}" growing="true" growingScrollToLoad="true" 
		busyIndicatorDelay="{detailView>/lineItemTableDelay}" class="sapUiResponsiveMargin">
		<headerToolbar>
			<Toolbar class="white">
				<SearchField placeholder="{i18n>productCode}" custom:id="productRecipeHeader" custom:key="Name" showSearchButton="true" search="triggerSearch" width="auto"/>
				<ToolbarSpacer/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column><Text class="black" text="{i18n>productCode}"/></Column>
			<Column><Text class="black" text="{i18n>recipeNumber}"/></Column>
			<Column><Text class="black" text="{i18n>name}"/></Column>
			<Column><Text class="black" text="{i18n>dateFrom}"/></Column>
			<Column><Text class="black" text="{i18n>dateTo}"/></Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{Code}"/>
					<Text text="{RecipeNumber}"/>
					<Text text="{Name}"/>
					<Text text="{DateFrom}"/>
					<Text text="{DateTo}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>