<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Table mode="SingleSelectLeft" includeItemInSelection="true" id="productRecipe" visible="false" custom:id="productRecipe" items="{}" select="onTableSelect" width="auto" updateFinished="onListUpdateFinished"
		noDataText="{i18n>detailLineItemTableNoDataText}" growing="true" growingScrollToLoad="true" busyIndicatorDelay="{detailView>/lineItemTableDelay}" class="sapUiResponsiveMargin">
		<headerToolbar>
			<Toolbar class="white">
				<SearchField placeholder="{i18n>productCode}" custom:id="productRecipe" custom:key="ProductCode" showSearchButton="true" search="triggerSearch" width="auto"/>
				<ToolbarSpacer/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column><Text class="black" text="{i18n>productCode}"/></Column>
			<Column><Text class="black" text="{i18n>salesProgram}"/></Column>
			<Column><Text class="black" text="{i18n>dateFrom}"/></Column>
			<Column><Label class="black" text="{i18n>dateTo}"/></Column>
			<Column><Label class="black" text="{i18n>recipeNumber}"/></Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{ProductCode}"/>
					<Text text="{SalesProgram}"/>
					<Text text="{DateFrom}"/>
					<Text text="{DateTo}"/>
					<Text text="{RecipeNumber}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>