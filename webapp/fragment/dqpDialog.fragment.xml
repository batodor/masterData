<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog title="{i18n>dqp}" class="sapUiContentPadding" id="dqpDialog">
		<content>
			<Label required="true" text="{i18n>productType}" width="150px"/>
			<Select selectedKey="{TypeProduct}" custom:key="typeOfProduct" forceSelection="false" items="{ path: '/dictionarySalesDivisionsSet', sorter: { path: 'Name' } }" width="200px">
				<core:Item key="{Code}" text="{Code} - {Name}"/>
			</Select>
			<ToolbarSpacer/>
			<Label required="false" text="{i18n>salesProgram}" width="150px"/>
			<!-- custom:key="salesProgram" -->
			<Select selectedKey="{SalesProgram}" forceSelection="false" 
				items="{ path: '/dictionarySalesProgramSet', sorter: { path: 'Code' } }" width="200px">
				<core:Item key="{Code}" text="{Code} - {Name}"/>
			</Select>
			<ToolbarSpacer/>
			<Label required="false" text="{i18n>salesRegion}" width="150px"/>
			<!-- custom:key="salesRegion" -->
			<Select selectedKey="{SalesRegion}" forceSelection="false" items="{ path: '/salesRegionSet', sorter: { path: 'Name' } }" width="200px">
				<core:Item key="{Code}" text="{Code} - {Name}"/>
			</Select>
			<ToolbarSpacer/>
			<Label required="false" text="{i18n>qp}" width="150px"/>
			<!-- custom:key="qp" -->
			<Select selectedKey="{QP}" forceSelection="false" items="{ path: '/qualityParametersSet', sorter: { path: 'QPCode' } }" width="200px">
				<core:Item key="{QPKey}" text="{QPKey} - {QPCode}"/>
			</Select>
			<ToolbarSpacer/>
			<Label required="false" text="{i18n>baseQP}" width="150px"/>
			<!-- custom:key="baseQP" -->
			<Select selectedKey="{BaseQP}" forceSelection="false" items="{ path: '/bmqcSet', sorter: { path: 'Name' } }" width="200px">
				<core:Item key="{Code}" text="{Code} - {Name}"/>
			</Select>
			<ToolbarSpacer/>
			<Label text="{i18n>uom}" width="150px"/>
			<Input 
				type="Text"
				custom:id="uom"
				custom:filters="UOMCode,UOMName"
				id="uomdqpValueHelp"
				showValueHelp="true"
				valueHelpRequest="handleValueHelp"
				value="{UOM}" width="200px" />
			<ToolbarSpacer/>
			<Label text="{i18n>fineUOM}" width="150px"/>
			<Input value="{FineUOM}" width="200px" />
		</content>
		<buttons>
			<Button text="{i18n>cancel}" custom:id="dqp" type="Back" press="dialogCancel"/>
			<Button text="{i18n>add}" custom:id="dqp" visible="false" type="Accept" press="dialogAdd"/>
			<Button text="{i18n>edit}" custom:id="dqp" visible="false" type="Default" press="dialogEdit"/>
			<Button text="{i18n>save}" custom:id="dqp" visible="false" type="Accept" press="dialogSave"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>