<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog title="{i18n>dqp}" class="sapUiContentPadding" id="dqpDialog" stretch="{device>/system/phone}">
		<content>
			<Label required="true" text="{i18n>productType}"/>
			<Select selectedKey="{TypeProduct}" custom:key="typeOfProduct" forceSelection="false" items="{ path: '/dictionarySalesDivisionsSet', sorter: { path: 'Name' } }" 
				width="100%">
				<core:Item key="{Code}" text="{Code} - {Name}"/>
			</Select>
			<ToolbarSpacer/>
			<Label class="marginTop" required="false" text="{i18n>salesProgram}"/>
			<Select selectedKey="{SalesProgram}" forceSelection="false" custom:key="salesProgram" custom:noCheck="true" width="100%"
				items="{ path: '/dictionarySalesProgramSet', sorter: { path: 'Code' } }" >
				<core:Item key="{Code}" text="{Code} - {Name}"/>
			</Select>
			<ToolbarSpacer/>
			<Label class="marginTop" required="false" text="{i18n>salesRegion}"/>
			<Select selectedKey="{SalesRegion}" custom:key="salesRegion" forceSelection="false" custom:noCheck="true" width="100%"
				items="{ path: '/salesRegionSet', sorter: { path: 'Name' } }" >
				<core:Item key="{Code}" text="{Code} - {Name}"/>
			</Select>
			<ToolbarSpacer/>
			<Label class="marginTop" required="false" text="{i18n>qpCode}"/>
			<Input 
				custom:id="qualityParametersPopup"
				custom:key="qpCode"
				custom:filters="QPCode,QPName"
				custom:set="qualityParameters"
				custom:value="{QP}"
				id="qualityParametersPopupdqpValueHelp"
				showValueHelp="true"
				valueHelpRequest="handleValueHelp"
				value="{QPName}"
				change="onChange" />
			<ToolbarSpacer/>
			<Label class="marginTop" required="false" text="{i18n>baseQP}"/>
			<Select
				selectedKey="{BaseQP}"
				id="qualityParametersPopupdqpCombobox"
				custom:key="baseQP"
				forceSelection="false"
				custom:noCheck="true" 
				items="{ path: '/bmqcSet' }"
				width="100%">
				<core:Item key="{Code}" text="{Code} - {Name}"/>
			</Select>
			<ToolbarSpacer/>
			<Label class="marginTop" text="{i18n>uom}"/>
			<Input 
				type="Text"
				custom:id="uom"
				custom:filters="UOMCode,UOMName"
				id="uomdqpValueHelp"
				showValueHelp="true"
				valueHelpRequest="handleValueHelp"
				value="{UOM}"  />
			<ToolbarSpacer/>
			<Label class="marginTop" text="{i18n>fineUOM}"/>
			<Input value="{FineUOM}"  />
		</content>
		<buttons>
			<Button text="{i18n>cancel}" custom:id="dqp" type="Back" press="dialogCancel"/>
			<Button text="{i18n>add}" custom:id="dqp" visible="false" type="Accept" press="dialogAdd"/>
			<Button text="{i18n>edit}" custom:id="dqp" visible="false" type="Default" press="dialogEdit"/>
			<Button text="{i18n>save}" custom:id="dqp" visible="false" type="Accept" press="dialogSave"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>