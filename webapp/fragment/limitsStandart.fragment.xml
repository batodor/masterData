<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Table mode="SingleSelectLeft" id="limitsStandart" visible="false" items="{}" select="onTableSelect" width="auto" updateFinished="onListUpdateFinished"
		noDataText="{i18n>detailLineItemTableNoDataText}" growing="true" growingScrollToLoad="true" busyIndicatorDelay="{detailView>/lineItemTableDelay}" class="sapUiResponsiveMargin">
		<headerToolbar>
			<Toolbar class="white">
				<Label id="limitsStandartCount" text="Items"/>
				<ToolbarSpacer/>
				<SearchField placeholder="{i18n>search}" showSearchButton="true" search="triggerSearch" width="auto"/>
				<Button text="{i18n>add}" press="tableAdd" type="Accept"/>
				<Button id="limitsStandartEdit" text="{i18n>edit}" press="tableEdit" enabled="false" type="Emphasized"/>
				<Button id="limitsStandartDelete" text="{i18n>delete}" press="tableDelete" type="Reject" enabled="false"/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column><Text class="black" text="{i18n>legalEntity}"/></Column>
			<Column><Text class="black" text="{i18n>rating}"/></Column>
			<Column><Text class="black" text="{i18n>businessPartnersRole}"/></Column>
			<Column><Text class="black" text="{i18n>tonnage}"/></Column>
			<Column><Text class="black" text="{i18n>uom}"/></Column>
			<Column><Text class="black" text="{i18n>paymentTerms}"/></Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{LegalEntity}"/>
					<Text text="{Rating}"/>
					<Text text="{BusinessPartnersRole}"/>
					<Text text="{Tonnage}"/>
					<Text text="{Uom}"/>
					<Text text="{PaymentTerms}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>