<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Table mode="SingleSelectLeft" includeItemInSelection="true" id="limitsStandart" visible="false" custom:id="limitsStandart" items="{}" select="onTableSelect" width="auto" updateFinished="onListUpdateFinished"
		noDataText="{i18n>detailLineItemTableNoDataText}" growing="true" growingScrollToLoad="true" busyIndicatorDelay="{detailView>/lineItemTableDelay}" class="sapUiResponsiveMargin">
		<headerToolbar>
			<Toolbar class="white">
				<ToolbarSpacer/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column><Text class="black" text="{i18n>legalEntity}"/></Column>
			<Column><Text class="black" text="{i18n>rating}"/></Column>
			<Column><Text class="black" text="{i18n>businessPartnersRole}"/></Column>
			<Column><Text class="black" text="{i18n>dateFrom}"/></Column>
			<Column><Text class="black" text="{i18n>dateTo}"/></Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{LegalEntity}"/>
					<Text text="{Rating}"/>
					<Text text="{BusinessPartnersRole}"/>
					<Text text="{DateFrom}"/>
					<Text text="{DateTo}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>