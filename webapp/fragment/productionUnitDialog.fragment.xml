<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog title="{i18n>producerConsumer}" stretch="{device>/system/phone}" class="sapUiContentPadding" id="productionUnitDialog">
		<content>
			<Label required="true" text="{i18n>producerConsumer}"/>
			<Input value="{ProducerConsumer}" custom:key="producerConsumer"/>
			<ToolbarSpacer/>
			<Label class="marginTop" text="{i18n>productionUnitName}"/>
			<Input value="{Name}" />
			<ToolbarSpacer/>
			<Label class="marginTop" text="{i18n>internalExternal}"/>
			<Select forceSelection="false" width="100%" selectedKey="{InternalExternal}" items="{ path: '/dictionaryUnitTypeSet', sorter: { path: 'Name' } }">
				<core:Item key="{Code}" text="{Name}"/>
			</Select>
			<ToolbarSpacer/>
			<Label class="marginTop" text="{i18n>partner}"/>
			<Input 
				type="Text"
				custom:id="dictionaryBPInt"
				custom:filters="Name,Partner"
				id="dictionaryBPIntproductionUnitValueHelp"
				showValueHelp="true"
				valueHelpRequest="handleValueHelp"
				value="{Partner}" />
			<ToolbarSpacer/>
			<Label class="marginTop" text="{i18n>producer}"/>
			<ToolbarSpacer/>
			<CheckBox enabled="false" selected="{Producer}" />
			<ToolbarSpacer/>
			<Label class="marginTop" text="{i18n>consumer}"/>
			<ToolbarSpacer/>
			<CheckBox enabled="false" selected="{Consumer}" />
			<ToolbarSpacer/>
			<Label class="marginTop" text="{i18n>active}"/>
			<ToolbarSpacer/>
			<CheckBox enabled="false" selected="{Active}" />
		</content>
		<buttons>
			<Button text="{i18n>cancel}" custom:id="productionUnit" type="Back" press="dialogCancel"/>
			<Button text="{i18n>add}" custom:id="productionUnit" visible="false" type="Accept" press="dialogAdd"/>
			<Button text="{i18n>edit}" custom:id="productionUnit" visible="false" type="Default" press="dialogEdit"/>
			<Button text="{i18n>save}" custom:id="productionUnit" visible="false" type="Accept" press="dialogSave"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>