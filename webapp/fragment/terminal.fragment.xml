<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Table mode="SingleSelectLeft" id="terminal" visible="false" custom:id="materialGroup" items="{}" select="onTableSelect" width="auto" updateFinished="onListUpdateFinished"
		noDataText="{i18n>detailLineItemTableNoDataText}" growing="true" growingScrollToLoad="true" busyIndicatorDelay="{detailView>/lineItemTableDelay}" class="sapUiResponsiveMargin">
		<headerToolbar>
			<Toolbar class="white">
				<Label id="terminalCount" text="Items"/>
				<ToolbarSpacer/>
				<SearchField placeholder="{i18n>search}" showSearchButton="true" search="triggerSearch" width="auto"/>
				<Button text="{i18n>add}" custom:id="terminal" press="tableAdd" type="Accept"/>
				<Button id="terminalEdit" custom:id="terminal" text="{i18n>edit}" press="tableEdit" enabled="false" type="Emphasized"/>
				<Button id="terminalDelete" custom:id="terminal" text="{i18n>delete}" press="tableDelete" type="Reject" enabled="false"/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column><Text class="black" text="{i18n>portName}"/></Column>
			<Column><Text class="black" text="{i18n>terminalCode}"/></Column>
			<Column><Text class="black" text="{i18n>terminalName}"/></Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{PortName}"/>
					<Text text="{TerminalCode}"/>
					<Text text="{TerminalName}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>