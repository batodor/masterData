<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog title="{i18n>fcaProduct}" class="sapUiContentPadding" id="fcaProductDialog" stretch="{device>/system/phone}">
		<content>
			<Label required="true" text="{i18n>salesProgram}"/>
			<Select selectedKey="{SalesProgram}" custom:key="salesProgram" forceSelection="false" 
				items="{ path: '/dictionarySalesProgramSet', sorter: { path: 'Code' } }" width="100%">
				<core:Item key="{Code}" text="{Code} - {Name}"/>
			</Select>
			<ToolbarSpacer/>
			<Label class="marginTop" required="true" text="{i18n>dateFrom}"/>
			<DatePicker dateValue="{FromDate}" custom:key="dateFrom"/>
			<ToolbarSpacer/>
			<Label class="marginTop" text="{i18n>dateTo}"/>
			<DatePicker dateValue="{ToDate}" custom:key="dateTo" custom:editable="true"/>
			<ToolbarSpacer/>
			<Label class="marginTop" text="{i18n>minFcaPrice}"/>
			<Input value="{MinFCAPrice}" maxLength="15" placeholder="0"/>
			<ToolbarSpacer/>
			<Label class="marginTop" text="{i18n>currency}"/>
			<Input 
				custom:id="currencyPopup"
				custom:set="currency"
				custom:filters="CurrencyCode,CurrencyName"
				id="currencyPopupfcaProductValueHelp"
				showValueHelp="true"
				valueHelpRequest="handleValueHelp"
				value="{Currency}" />
		</content>
		<buttons>
			<Button text="{i18n>cancel}" custom:id="fcaProduct" type="Back" press="dialogCancel"/>
			<Button text="{i18n>add}" custom:id="fcaProduct" visible="false" type="Accept" press="dialogAdd"/>
			<Button text="{i18n>edit}" custom:id="fcaProduct" visible="false" type="Default" press="dialogEdit"/>
			<Button text="{i18n>save}" custom:id="fcaProduct" visible="false" type="Accept" press="dialogSave"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>